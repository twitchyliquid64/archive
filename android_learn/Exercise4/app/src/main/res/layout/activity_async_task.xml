<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AsyncTaskTest" >

    <TextView
        android:text="@string/activity_async_display_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/activity_async_display_text"
        android:textSize="22dp"
        android:layout_marginBottom="21dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_async_display_text"
        android:id="@+id/file_selector_spinner"
        android:gravity="center"
        android:layout_marginBottom="21dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_selector_spinner"
        android:id="@+id/download_button"
        android:text="@string/download_button"
        android:layout_marginBottom="21dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_button"
        android:id="@+id/download_all_button"
        android:text="@string/download_all_button"
        android:layout_marginBottom="21dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_all_button"
        android:id="@+id/calculate_millionth_button"
        android:text="@string/calculate_millionth_button"
        android:layout_marginBottom="21dp"/>



</RelativeLayout>
